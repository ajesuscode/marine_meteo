{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["index.ts", "src/**/*", "test/**/*", "example/**/*"]
}
